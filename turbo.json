{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["dist/**"],
            "outputMode": "errors-only"
        },
        "watch": {
            "dependsOn": ["^watch"],
            "outputMode": "errors-only"
        },
        "format": {
            "dependsOn": ["^format"],
            "outputMode": "errors-only"
        },
        "lint": {
            "dependsOn": ["^lint"],
            "outputMode": "errors-only"
        },
        "lint:apply": {
            "dependsOn": ["^lint:apply"],
            "outputMode": "errors-only"
        }
    }
}